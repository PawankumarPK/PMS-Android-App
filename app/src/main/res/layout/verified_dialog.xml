<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:background="@drawable/white_radius_gradients">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mStopLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_success"
               android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/mIncorrectPasscode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/size10"
                android:gravity="center"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/yor_are_successfully_verified_the_account"
                android:textColor="@color/colorBlackLessOpecity"
                android:textSize="@dimen/size20" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mStopLayout"
            android:layout_marginBottom="20dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/mGoToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size20"
                android:background="@drawable/gradient"
                android:fontFamily="@font/raleway_medium"
                android:text="Go to login"
                android:textAllCaps="false"
                android:onClick="@{}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size16"
                app:layout_constraintBottom_toBottomOf="parent" />



        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>