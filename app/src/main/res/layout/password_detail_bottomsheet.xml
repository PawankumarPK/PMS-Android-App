<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size10">

    <ProgressBar
        android:id="@+id/mBottomSheetProgressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size20"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminateOnly="true"
        app:layout_constraintTop_toBottomOf="@+id/mToolbar"/>


    <ImageView
        android:id="@+id/mClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_gravity="end"
        android:contentDescription="@null"
        android:layout_margin="@dimen/size10"/>

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawablePadding="@dimen/size20"
        android:text="Title"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableLeftCompat="@drawable/ic_title" />


    <TextView
        android:id="@+id/mWebAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawablePadding="@dimen/size20"
        android:text="Web Address"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/size16"
        android:onClick="@={view}"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableLeftCompat="@drawable/ic_website" />


    <TextView
        android:id="@+id/mEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawablePadding="@dimen/size20"
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableLeftCompat="@drawable/ic_email" />


    <TextView
        android:id="@+id/mPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawablePadding="@dimen/size20"
        android:text="Password"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_password" />


    <TextView
        android:id="@+id/mAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawablePadding="@dimen/size20"
        android:text="Note"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_note" />

</LinearLayout>