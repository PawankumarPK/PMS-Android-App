<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size10">

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawableStart="@drawable/ic_title"
        android:drawableLeft="@drawable/ic_title"
        android:drawablePadding="@dimen/size20"
        android:text="Title"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mWebAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawableStart="@drawable/ic_website"
        android:drawableLeft="@drawable/ic_title"
        android:drawablePadding="@dimen/size20"
        android:text="Web Address"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_title"
        android:drawablePadding="@dimen/size20"
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mSuccessfull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_title"
        android:drawablePadding="@dimen/size20"
        android:text="Password"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:drawableStart="@drawable/ic_note"
        android:drawableLeft="@drawable/ic_title"
        android:drawablePadding="@dimen/size20"
        android:text="Note"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size16"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>